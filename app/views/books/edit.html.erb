<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

<h1>Editing Book</h1>
<%= form_for (@book) do |f| %>
	<p>
		<%= f.label :title%>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text%>
		<%= f.text_area :body%>
	</p>
	<p>
		<%= f.submit 'Update Book'%>
	</p>
<% end %>
<%= link_to "Show", book_path(@book)%>|
<%= link_to "Back", books_path%>
